{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/types",
    "rootDir": "lib",
    "skipLibCheck": true,
    "strict": true,
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx"
  },
  "include": ["lib/**/*"],
  "exclude": [
    "lib/**/*.test.ts*",
    "lib/**/*.stories.tsx",
    "lib/**/__tests__/**"
  ]
}
